{
  "extends": "@coze-arch/ts-config/tsconfig.node.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["vitest.config.mts", "**/*.test.ts"],
  "exclude": ["./dist"],
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "noImplicitAny": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "types": ["vitest/globals", "node"]
  }
}
